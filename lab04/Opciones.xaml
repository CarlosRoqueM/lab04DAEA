<Window x:Class="lab04.Opciones"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab04"
        mc:Ignorable="d"
        Title="Opciones" Height="450" Width="800">
    <Grid>
        <Border Width="300"
            Height="400"
            Background="White"
            CornerRadius="6">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15"
                              Direction ="-90" 
                              RenderingBias ="Quality" 
                              ShadowDepth ="2" 
                              Color ="Gray" />
            </Border.Effect>
            <StackPanel Orientation="Vertical"
                    Margin="20">
                <TextBlock Text="Selecciona una opcion" 
                       FontSize="25"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       FontWeight="Bold"
                       Padding="10"
                       />
                <Grid VerticalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Button x:Name="Proveedores" 
                        Grid.Row="0"
                        Content="Categoria" 
                        Foreground="White"
                        Background="Black"
                        Margin="0,13"
                        Height="35"
                        Width="250" Click="Proveedores_Click"  
                        />

                    <Button x:Name="DataReadBtn" 
                        Grid.Row="1"
                        Content="Categorias" 
                        Foreground="White"
                        Background="BlueViolet"
                        Height="35"
                        Width="250" Click="DataReadBtn_Click" 
                    />
                    <Button x:Name="ProveNomBtn" 
                        Grid.Row="2"
                        Content="Proveedores" 
                        Foreground="Black"
                        Background="SkyBlue"
                        Height="35"
                        Width="250" Margin="0,18,10,-17" Grid.RowSpan="2" Click="ProveNomBtn_Click"  
                    />
                </Grid>




            </StackPanel>
        </Border>
    </Grid>
</Window>
